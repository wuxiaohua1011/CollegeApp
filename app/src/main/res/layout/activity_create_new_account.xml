<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.michaelwu.collegeapp.Presenter.CreateNewAccount">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_creat_new_account_edit_text_first_name"
        android:layout_alignParentTop="true"
        android:hint="First Name"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/activity_creat_new_account_edit_text_last_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_creat_new_account_edit_text_last_name"
        android:layout_below="@+id/activity_creat_new_account_edit_text_first_name"
        android:hint="Last Name"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/activity_creat_new_account_edit_text_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_creat_new_account_edit_text_email"
        android:layout_below="@+id/activity_creat_new_account_edit_text_last_name"
        android:hint="email address"
        android:layout_alignEnd="@+id/activity_creat_new_account_edit_text_password"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/activity_creat_new_account_edit_text_password"
        android:layout_below="@+id/activity_creat_new_account_edit_text_email"
        android:hint="Password"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/activity_creat_new_account_edit_text_confirm_password"
        android:hint="Confirm Password"
        android:layout_below="@+id/activity_creat_new_account_edit_text_password"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/activity_creat_new_account_button_submit"
        android:layout_below="@+id/activity_creat_new_account_edit_text_confirm_password"
        android:layout_alignParentStart="true" />
</RelativeLayout>
